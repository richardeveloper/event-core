<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="795.0" prefWidth="1265.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.event.core.controllers.CadastroUsuarioController">
   <Label layoutX="1.0" prefHeight="38.0" prefWidth="1265.0" styleClass="title-page" text="CADASTRO DE USUÁRIO" />

   <Label layoutX="255.0" layoutY="78.0" text="Nome" />
   <TextField fx:id="nomeTextField" alignment="CENTER" layoutX="254.0" layoutY="111.0" prefHeight="29.0" prefWidth="466.0" promptText="Fulano de Tal" />

   <Label layoutX="759.0" layoutY="78.0" text="CPF" />
   <TextField fx:id="cpfTextField" alignment="CENTER" layoutX="759.0" layoutY="111.0" prefHeight="29.0" prefWidth="248.0" promptText="123.456.789-00" />

   <Label layoutX="254.0" layoutY="189.0" text="E-mail" />
   <TextField fx:id="emailTextField" alignment="CENTER" layoutX="254.0" layoutY="218.0" prefHeight="29.0" prefWidth="466.0" promptText="fulano@email.com" />

   <Label layoutX="759.0" layoutY="189.0" text="Telefone" />
   <TextField fx:id="telefoneTextField" alignment="CENTER" layoutX="759.0" layoutY="218.0" prefHeight="29.0" prefWidth="248.0" promptText="(99) 12345-6789" />

   <Label layoutX="255.0" layoutY="289.0" text="Tipo de usuario" />
   <ComboBox fx:id="cargoComboBox" layoutX="256.0" layoutY="323.0" prefHeight="35.0" prefWidth="757.0" promptText="Selecione o tipo" />

   <Button fx:id="saveButton" layoutX="554.0" layoutY="426.0" mnemonicParsing="false" onAction="#salvarUsuario" text="Cadastrar usuário" />
</AnchorPane>
